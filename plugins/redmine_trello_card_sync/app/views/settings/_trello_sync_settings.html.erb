<h1>Trello Card Sync Settings</h1>
<hr/>
<p>
  <label for="settings_public_key">Trello API public key</label>
  <input type="text" id="settings_public_key" size=80 value="<%= settings['public_key'] %>" name="settings[public_key]" />
</p>
<p>
  <label for="settings_member_token">Trello API member token</label>
  <input type="text" id="settings_member_token" size=80 value="<%= settings['member_token'] %>" name="settings[member_token]" />
</p>
<p>
  <label for="settings_board_id">Trello default board ID</label>
  <input type="text" id="settings_board_id" size=20 value="<%= settings['board_id'] %>" name="settings[board_id]" />
</p>
<p>
  <label for="settings_redmine_statuses">Redmine statuses for mapping</label>
  <textarea id="settings_redmine_statuses" name="settings[redmine_statuses]" rows="6"><%= settings['redmine_statuses'] %></textarea>
</p>
<p>
  <label for="settings_trello_lists">Trello lists for mapping</label>
  <textarea id="settings_trello_lists" name="settings[trello_lists]" rows="6"><%= settings['trello_lists'] %></textarea>
</p>
